# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Next.js Public Variables (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# AI/LLM Configuration
# OpenAI API key for embeddings and LLM operations
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding Model Configuration
EMBEDDING_MODEL=openai/text-embedding-3-large

# Microsoft 365 / Graph API Configuration
# OAuth credentials - store in Supabase Vault for production
# These are for MCP server or direct API fallback
MICROSOFT_CLIENT_ID=your-azure-ad-client-id
MICROSOFT_CLIENT_SECRET=your-azure-ad-client-secret
MICROSOFT_TENANT_ID=common

# Slack Configuration
# Bot token for Slack API - store in Supabase Vault for production
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Notification Configuration
# Twilio (optional, for SMS fallback)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
NODE_ENV=development
PORT=3000

# MCP Server Configuration (if using MCP servers)
# Microsoft 365 MCP Server
MS365_MCP_ORG_MODE=true
MS365_MCP_CLIENT_ID=your-azure-ad-client-id
MS365_MCP_TENANT_ID=common

# Logging
LOG_LEVEL=info

# MCP Server Configuration
# Enable MCP servers for data fetching (preferred method)
MS365_MCP_ENABLED=false
SLACK_MCP_ENABLED=false
